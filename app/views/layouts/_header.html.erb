
<div class="navbar-inverse navbar-fixed-top ">
  <div class="container">
    <button class="navbar-toggle collapsed" aria-controls="navbar" aria-expanded="false" data-target="#navbar" data-toggle="collapse" type="button">
                <span class="sr-only">
                  Toggle navigation
                </span>
    <span class="icon-bar"></span>
    <span class="icon-bar"></span>
    <span class="icon-bar"></span>
  </button>

    <div class="navbar-collapse">

    <div class="nav navbar-header">
      <%= link_to "Image Galaxy", root_path, class: "navbar-brand" %>
    </div>

    <div id="navbar" class="collapse navbar-collapse">
      <ul class="nav navbar-nav">
          <li class="<%= 'active' if current_page?(root_path) %>">
            <%= link_to "Home", root_path %>
          </li>
          <li class="<%= 'active' if current_page?(about_path) %>">
            <%= link_to "About", about_path %>
          </li>
      </ul>

      <ul class="nav pull-right">
        <% if user_signed_in? %>

                <% if current_page?(edit_user_registration_path)%>
                    <%= link_to "Edit profile", edit_user_registration_path, class: "btn btn-success btn-large"%>
                <%else%>
                    <%= link_to "Edit profile", edit_user_registration_path, class: "btn btn-primary btn-large"%>
                <%end%>

                <% if current_page?(destroy_user_session_path)%>
                    <%= link_to "Logout", destroy_user_session_path, method: :delete, class: "btn btn-success btn-large" %>
                <%else%>
                    <%= link_to "Logout", destroy_user_session_path, method: :delete, class: "btn btn-primary btn-large" %>
                <%end%>

        <%else %>

                <% if current_page?(new_user_session_path) %>
                    <%= link_to "Login", new_user_session_path, class: "btn btn-success btn-large" %>
                <% else %>
                    <%= link_to "Login", new_user_session_path, class: "btn btn-primary btn-large" %>
                <% end %>

                <% if current_page?(new_user_registration_path) %>
                    <%= link_to "Sing Up Now !", new_user_registration_path, class: "btn btn-success btn-large" %>
                <%else%>
                    <%= link_to "Sing Up Now !", new_user_registration_path, class: "btn btn-primary btn-large" %>
                <%end%>

        <% end %>
      </ul>
    </div>

    </div>
  </div>
</div>




