<div class="col-md-6">


  <div class="well">
    <p >
      <%= @comment.content %>
    </p>

    <p style="color: crimson">
      <%= @comment.user.name %>
    </p>

  </div>

  <% if current_user == @comment.user %>
      <%= link_to 'Edit', edit_comment_path(@comment),class: "btn btn-info" %> |
  <% end %>
  <%= link_to 'Back', comments_path,class: "btn btn-info" %>

</div>